{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",                     // ✅ changed from ESNext to NodeNext
    "moduleResolution": "NodeNext",          // ✅ consistent with module
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
